FROM golang:1.18.3 as builder

WORKDIR /workspace
COPY go.mod go.sum ./
RUN go mod download

COPY cmd/labeler/ cmd/labeler/
COPY pkg/ pkg/

RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 GO111MODULE=on go build -a -o node_labeler cmd/labeler/main.go

FROM registry.access.redhat.com/ubi8:8.6-754

ARG VERSION
### Required OpenShift Labels
LABEL name="Intel速 FPGA discovery container" \
    vendor="Intel Corporation" \
    version=$VERSION \
    release="1" \
    summary="Intel速 FPGA discovery container labels kubernetes nodes that include Intel速 FPGA accelerator" \
    description="The container tries to detect Intel速 FPGA accelerators and label the nodes that contain them \
and remove the label for nodes that do not."

RUN mkdir -p /usr/share/misc/ && \
    cd /usr/share/misc/ && \
    curl https://pci-ids.ucw.cz/v2.2/pci.ids.gz --output pci.ids.gz && \
    gzip -d pci.ids.gz && \
    rm -rfv ./pci.ids.gz

COPY TEMP_LICENSE_COPY /licenses/LICENSE
USER 1001
WORKDIR /labeler-workspace
COPY --from=builder /workspace/node_labeler .

ENTRYPOINT ["bash", "-c", "/labeler-workspace/node_labeler && sleep infinity"]
